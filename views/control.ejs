<%- include("./partials/header.ejs") %>

<div class="container">
<div class="tbl mt-5">
    <form class="form-inline my-2 my-lg-2 d-inline-block float-right" action="/control/search" method="GET">
        <input class="form-control mr-sm-2" type="search" placeholder="Search by username" aria-label="Search" name="term">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <h5 class="my-2 d-inline-block h5">Recent Check In's</h5>
 <table class="table border">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Date</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% attends.sort((a, b) => {return b.date - a.date}) %>
        <% attends.forEach((attend) => { %>         
            <tr>
                <td><%= attend.username %></td>
                <td><%= attend.date %></td>
                <td><%= attend.start %></td>
                <td><%= attend.end %></td>
                <td><a href="/update/<%= attend._id %>">Edit</a></td>
            </tr>

        <%})%>
    </tbody>
 </table>
 <h5 class="my-2 d-inline-block h5">Recent Absence Notifications</h5>
 <table class="table border">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Date</th>
            <th scope="col">Absent for</th>
            <th scope="col">Reason</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% leaves.sort((a, b) => {return b.date - a.date}) %>
        <% leaves.forEach((leave) => { %>         
            <tr>
                <td><%= leave.username %></td>
                <td><%= leave.date %></td>
                <td><%= leave.absent %></td>
                <td><%= leave.reason %></td>
                <td><%= leave.status %></td>
                <td><a href="/leaveUpdate/<%= leave._id %>" class="d-block">Edit</a>
                    <a href="/leaveApprove/<%= leave._id %>" class="d-block text-success">Approve</a>
                    <a href="/leaveReject/<%= leave._id %>" class="d-block text-danger">Reject</a>
                </td>
            </tr>
        <%})%>
    </tbody>
 </table>
</div>
</div>

<%- include("./partials/footer.ejs") %>